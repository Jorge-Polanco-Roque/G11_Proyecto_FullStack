<body>
    
    <%- include ("partials/nav") %>

<div class="register">

    <p class="title-form">Completa el registro</p>

    <form action="/my-handling-form-page" method="post" class="formularios">

        <div class="form-container">
           <label for="name">Nombres:</label>
           <input type="text" id="name" name="user_name" placeholder="Ingresa tus Nombres">
        </div>
         
         <div class="form-container">
            <label for="name">Apellido:</label>
            <input type="text" id="name" name="user_name" placeholder="Ingresa tu Apellido">
        </div>
         
        
         
          <div class="form-container">
           <label for="mail">Correo electrónico:</label>
           <input type="email" id="mail" name="user_mail" placeholder="Ingresa tu E-mail">
        </div>
           
         <div class="form-container">
            <label for="name">Fecha de nacimiento</label>
            <input type="date" id="name" name="user_name">
        </div>
              
          <div class="form-container">
            <label for="name">Genero</label>
            <select name="Genero">

                <option>Masculino</option>
                
                <option>Femenino</option>
                
                <option>Otro</option>
                
                </select>          
            </div>

            <div class="form-container">
                <label for="name">Nombre de Usuario:</label>
                <input type="text" id="name" placeholder="Ingresa tu Nickname">
            </div>

            <div class="form-container">
                <label for="name">Contraseña:</label>
                <input type="password" id="name"placeholder="Ingresa tu Contraseña">
            </div>

            
            <div class="form-container">
                <label for="name">Confirmar contraseña:</label>
                <input type="password" id="name" name="user_name" placeholder="Confirmar Contraseña">
            </div>

            <button type="submit" class="btn-registro"> Registrarte</button>


       </form>
    </div>


    <%- include ("partials/footer") %>



