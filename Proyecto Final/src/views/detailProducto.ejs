<!DOCTYPE html>
<html>

    <%- include("./partials/head")%>
    <link rel="stylesheet" href="/css/style_detailProducto.css">

    <body>

        <%- include("./partials/nav")%>

        <main>

            <div class="articulos-vista">           

                <div class="articulo">
                    <p class="pe categoria">  <%=product.category%> </p>
                    <p class="pe nombre"><%= product.name %></p>
                    <p class="pe precio">$<%= product.price %></p>                    
                    <p class="pe talles-title">Talles</p>
                    <ul class="pe talles">
                        <li class="lista-talles"><a href="#"> S</a></li>
                        <li class="lista-talles"><a href="#"> M</a></li>
                        <li class="lista-talles"><a href="#"> L</a></li>
                        <li class="lista-talles"><a href="#">XL</a></li>
                    </ul>
    
                    <div class="btn-buy">

                        <button class="btn-buy-btn">Comprar</button>   
                        <button class="btn-carrito">Agregar a Carrito</button>   
                        <button class="btn-edit" type="submit"><a href="/products/<%= product.id %>/edit">Editar Producto</a></button> 

                        <form action="/products/<%= product.id %>?_method=DELETE" method="POST" >
                            <button class="btn-delete" type="submit">Eliminar Producto</button>   
                        </form>
                                        
                    </div>
    
                </div>
    
                <div class="img-articulo">
                    <img src="/img/products/<%= product.image %>" class ="img-articulo-img">                
                </div>

            </div>

            <div class="detalles">
                <h4 class="detail">Detalles</h4>
                <p class="detail-p"><%= product.description%></p>        
            </div>
               
                
        </main>

    </body>

    <%- include("./partials/footer")%>
    
    </body>
</html>

